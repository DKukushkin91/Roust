extends ../../template/_layout

block pageVar
	-
		page = 'career';

block path
	-
		baseDir = '/f';

block title
	-
		title = 'Career'

block text
	-
		topText = 'Working at Roust Group, one of the largest alcohol companies, offers numerous opportunities for professional growth.';

block page
	section.career
		.container
			.career__wrap
				h2.career__title Why Work at Roust
				ul.career__list
					li.career__item
						.career__img
							img(src=`${baseDir}/img/people-icon.png`, alt="")
						p.career__sub-title Great career opportunities
						p.career__text We offer excellent opportunities for motivated professionals focused on results and teamwork.
					li.career__item
						.career__img.career__img--width
							img(src=`${baseDir}/img/world-icon.png`, alt="")
						p.career__sub-title International status
						p.career__text We are a leading international company with the most advanced infrastructure, global ambitions, and unique corporate culture.
					li.career__item
						.career__img.career__img--m-width
							img(src=`${baseDir}/img/pins-icon.png`, alt="")
						p.career__sub-title Wide business geography
						p.career__text The breadth of our brand portfolio across multiple diverse markets offers significant opportunities for career growth.
	section.offices
		.container
			.offices__text-content
				h2.offices__title Modern factories &amp; Comfortable offices
				p.offices__text Текст про то, что компания Roust предлагает комфортные условия для работы
			.offices__slider.swiper.js-career-slider
				.offices__slider-wrap.swiper-wrapper
					each val in [1, 2, 3]
						.offices__slide.swiper-slide
							img(src=`${baseDir}/img/career-slide${val}.jpg`, alt="")
				button.offices__nav-btn.offices__nav-btn--prev.js-career-btn-prev
					svg(width="14" height="9").offices__nav-icon
						use(href="/f/img/sprite.svg#arrow-g")
				button.offices__nav-btn.offices__nav-btn--next.js-career-btn-next
					svg(width="14" height="9").offices__nav-icon
						use(href="/f/img/sprite.svg#arrow-g")

	section.career-contacts
		.career-contacts__img
			picture
				source(media="(max-width: 574.9px)", srcset=`${baseDir}/img/arrow-bg-m.jpg`)
				source(media="(max-width: 959.9px)", srcset=`${baseDir}/img/arrow-bg-t.jpg`)
				img(src=`${baseDir}/img/arrow-bg.jpg`, alt="")
		.container
			.career-contacts__wrap
				h2.career-contacts__title HR Team
				p.career-contacts__sub-title Roust provides its employees with exciting career opportunities.
				ul.career-contacts__list

					each title in ['Russia', 'Hungary', 'USA', 'United Kingdom']
						li.career-contacts__item
							p.career-contacts__item-title=title
							a.career-contacts__link(href="mailto:hr@roust.com" target="_blank")
								svg(width="20" height="16").career-contacts__icon
										use(href=`${baseDir}/img/sprite.svg#email`)
								span.career-contacts__link-text hr@roust.com
				p.career-contacts__text For further information on job vacancies at Roust, please contact our HR team.
				button.top__btn.career-contacts__btn.animate-button.js-btn-form
					span.top__btn-text.career-contacts__btn-text Complete the form
