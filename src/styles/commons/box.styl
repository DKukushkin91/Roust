// fix footer
.box
	display flex
	flex-direction column
	height 100%

	&__content
		flex 1 0 auto

		&--brands-item
			display: grid

	// breeding
	&__index
		background radial-gradient(rgba(19,24,32,0) 26.04%,rgba(15,20,28,.85) 60.81%)
		background-repeat no-repeat
		background-position 50% 0
		background-size 600% 300%

	&__content-index
		flex 1 0 auto
		background-color: none

	//bg-pages
	&__top
		width: 100%
		position: relative
		grid-area: 1 / -1
		background-repeat: no-repeat
		background-size: cover

		&--brands
			background-image: url('/f/img/bg-brands.jpg')

		&--partnership
			background-image url('/f/img/bg-partnership.jpg')

		&--career
			background-image url('/f/img/bg-career.jpg')

		&--social-projects
			background-image url('/f/img/bg-social-projects.png')

		&--media
			background-image url('/f/img/bg-media.png')

	&__img
		grid-area: 1 / -1
		width: 100%
		height: 100%

		& img,
		& picture
			object-fit: cover
			height: 100%
