.header
	width: 100%
	padding: 60px 0;

	&__wrap
		display: flex
		flex-direction: row
		align-items: center
		justify-content: center
		position: relative
		padding-bottom: 70px

	&__logo-wrap
		max-width: 217px
		margin-left: auto
		margin-right: auto

	&__search
		display: flex
		flex-direction: row
		position: absolute
		top: 0
		right 0

	&__input
		fz-15()
		line-height: 18px
		font-weight: bold
		width: 52px
		border: 0
		border-radius: 0
		background: none
		color: $white
		outline: none

	&__search-icon
		max-width: 16px
		fill: $white

	&__search-btn
		display: flex
		flex-direction: row
		align-items: center
		margin-left: 11px
		background: none
		border: 0
		cursor pointer

.nav
	width: 100%

	&__list
		list-style: none
		padding: 0
		margin: 0
		display: flex
		flex-direction: row
		flex-wrap: wrap
		align-items: center

	&__item
		width: fit-content

		&:not(:last-child)
			margin-right: 71px

	&__link
		fz-15()
		line-height: 18px
		text-decoration: none
		color: $white
		font-weight: bold
