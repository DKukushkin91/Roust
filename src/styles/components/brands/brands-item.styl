.brands-item
	width: 100%
	position relative
	border-bottom: 1px solid #e6e8ea

	&--color
		background $white

	&__container
		padding: 0
		max-width: unset
		margin 0

		&--padding
			padding: 0 63px
			max-width: unset
			margin: 0

	&__wrap
		width: 50%
		transform: translate(0px, 120%);
		opacity: 0
		transition: all 0.8s ease 0s;

	&__wrap--active
		transform: translate(0px, 0px)
		opacity: 1

	&__content
		width: 100%
		display: grid

	&__img
		width: 100%
		height: 720px
		grid-area: 1 / -1

		& img,
		& picture
			height: 100%
			object-fit: cover

	&__text-block
		display: flex
		flex-direction: column
		justify-content: center
		background: $white
		position relative
		padding: 50px
		text-align: left
		grid-area: 1 / -1
		max-width: 363px
		margin auto 190px auto auto

	&__title
		fz-48()
		font-family $Georgia
		line-height 100%
		color: $d-grey
		padding-bottom 56px
		font-weight bold

		&--color
			color: $orange

	&__text
		fz-15()
		line-height 24px
		font-family $Inter
		font-weight medium
		color: $d-grey

	&__inner
		max-width: 1680px
		margin: 0 auto
		display: flex
		flex-direction: row

	&__box
		padding: 45px 0
		max-width: 360px
		text-align: left
		flex: 1 0 360px

	&__s-title
		fz-33()
		line-height 100%
		color: $d-grey
		padding-bottom 4px
		font-family $Inter
		font-weight 900

	&__text
		fz-15()
		font-family $Inter
		font-weight 500
		color: $m-grey

		&--fz
			fz-21()
			color: $d-grey
			line-height 29px

	&__slide
		flex: 1

	&__list
		list-style: none
		display: flex
		flex-direction: row
		padding 0
		margin 0

	&__item
		flex: 1
		max-width: 360px
		border-left: 1px solid #e6e8ea

	&__btn
		background: 0
		border: 0
		border-radius: 0
		cursor pointer
		display: flex
		flex-direction: row
		padding: 55px 46px
		position relative
		width: 100%

	&__text-box
		display: block

	&__picture
		display: block
		position: absolute
		right: 0
		bottom: 0
