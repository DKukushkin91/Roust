.brands-item
	width: 100%
	position relative

	&--color
		background $white
		height: 100%

		@media $lg
			grid-row: 1

	&--width
		@media $lg
			width 100vw
			max-width: 100%

	// &__top-container
	// 	transition: all 0.3s ease 0s

	// &__top-container--animate
	// 	padding 0 120px
	// 	margin: 0
	// 	margin-left auto

	&__container
		padding: 0
		max-width: unset
		margin 0

		&--padding
			padding: 0
			max-width: unset
			margin: 0
			margin-bottom 1px
			border-bottom: 1px solid #e6e8ea

	&__header-wrap
		padding-bottom 0

	&__wrap
		width: 50%
		transform: translate(0px, 120%);
		opacity: 0
		transition: all 0.8s ease 0s;

		@media $lg
			transform: none
			width 100%
			opacity: 1


	&__wrap--active
		transform: translate(0px, 0px)
		opacity: 1
		margin-top: 0

	&__content
		width: 100%
		display: grid

		@media $lg
			display block

	&__img-slider
		grid-area: 1 / -1
		width: 100%
		height: 100%

		@media $lg
			grid-area: unset
			position: absolute
			top 0
			left 0
			width 100%
			height 100%

	&__img
		width: 100%
		height: 100%

		& img,
		& picture
			height: 100%
			object-fit: cover

	&__nav-btn
		border: 0
		border-radius: 50%
		background: $m-grey
		position: absolute
		top: 50%
		z-index 99
		transform: rotate(90deg)
		width: 65px
		height 65px
		cursor pointer

		&:disabled
			opacity: 0.5

		@media (max-width: 1365px)
			display none

	&__nav-btn--next
		right: 40px
		transform: rotate(-90deg)

	&__nav-btn--prev
		left: 40px

	&__icon
		fill: $white
		width: 14px
		height: 9px

	&__text-slider.swiper
		grid-area: 1 / -1
		margin auto 190px auto auto
		max-width: 363px

		@media $lg
			grid-area: unset
			margin: 0 auto
			max-width: 535px

	&__text-wrapper.swiper-wrapper
		display: grid
		grid-auto-flow: column

		@media $lg
			display flex

	&__text-block
		display: flex
		flex-direction: column
		justify-content: flex-start
		background: $white
		position relative
		padding: 50px
		text-align: left
		opacity: 0
		transition: all 0.8s ease 0.3s

		@media $lg
			opacity: 1

			&.swiper-slide
				height: auto

		&--animate
			opacity: 1

	&__title
		fz-48()
		font-family $Georgia
		line-height 100%
		color: $d-grey
		padding-bottom 56px
		font-weight bold

		&--color
			color: $orange

	&__text
		fz-15()
		line-height 24px
		font-family $Inter
		font-weight medium
		color: $d-grey

	&__inner
		max-width: 1680px
		margin: 0 auto
		padding-left: 63px
		display: flex
		flex-direction: row

	&__box
		padding: 45px 0
		max-width: 360px
		text-align: left
		flex: 1 0 360px

	&__s-title
		fz-33()
		line-height 100%
		color: $d-grey
		padding-bottom 4px
		font-family $Inter
		font-weight 900

	&__text
		fz-15()
		font-family $Inter
		font-weight 500
		color: $m-grey

		&--fz
			fz-21()
			color: $d-grey
			line-height 29px

	&__slide
		flex: 1

		&.swiper
			width 100%

	&__list
		list-style: none
		display: flex
		flex-direction: row
		padding 0
		margin 0

	&__item
		// flex: 1
		max-width: 360px
		border-left: 1px solid #e6e8ea

	&__btn
		background: 0
		border: 0
		border-radius: 0
		cursor pointer
		display: flex
		flex-direction: row
		padding: 55px 46px
		position relative
		width: 100%

		&:hover
			background: $h-grey

	&__text-box
		display: block

	&__picture
		display: block
		position: absolute
		right: 0
		bottom: 0

	&__scroll-wrap
		width: 100%
		position relative

	&__scroll
		position: absolute
		bottom: 0
		left: 0
		background: $orange
		height: 5px
		z-index 1
		transition: all 0.3s ease 0s
