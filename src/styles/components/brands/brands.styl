.brands
	position relative
	background-color: $white
	width: 100%
	padding: 48px 0 25px 0

	@media $md
		padding 26px 0 34px 0

	&__container
		@media (max-width: 990px)
			padding: 0

	&__btns-wrap
		padding-bottom 47px

		@media (max-width: 990px)
			padding: 0 25px
			padding-bottom 26px

		@media $md
			text-align: center
			padding-bottom 26px

	&__btn
		border: 0
		background: 0
		border-radius: 0
		cursor pointer
		color: $black
		border-bottom: 2px solid transparent

		&:not(:last-child)
			margin-right: 44px

	&__btn--active
		color: $orange
		border-color: $orange

	&__btn-text
		fz-21()
		font-family $Inter
		font-weight 500
		color: inherit
		line-height 29px
		padding: 4px 2px

	&__wrap
		width: 100%

	&__list
		list-style: none
		padding: 0
		margin 0
		display grid
		grid-template-columns: repeat(3, 33.033%)
		grid-template-rows: repeat(auto-fill, minmax(310px, auto))
		column-gap: 5px
		row-gap: 5px
		padding-bottom 48px
		overflow: hidden

		@media $md
			grid-template-columns: repeat(2, minmax(310px, auto))

		@media $b-sm
			grid-template-columns: repeat(auto-fill, minmax(50%, 100%))

	&__item
		width 100%
		min-height: 310px
		height 100%
		position relative
		padding 20px 30px
		overflow hidden
		display: flex
		flex-direction: row

		@media $b-sm
			padding: 30px
			flex-direction: row-reverse

		&:first-child
			grid-column: 1
			grid-row: 1 / 3

	&__item--flex
		display flex
		flex-direction: column-reverse
		justify-content: flex-end

		@media $b-sm
			flex-direction row-reverse
			justify-content: space-between
			align-items: center

	&__item--bg-red
		background: linear-gradient(90deg, rgba(166,0,0,1) 13%, rgba(244,116,130,1) 77%);

	&__item--bg-blue
		background: linear-gradient(339deg, rgba(94,233,252,1) 0%, rgba(0,62,149,1) 100%);

	&__item--grid-2
		grid-column: 3
		grid-row: 2 / 4

		@media $md
			grid-row: unset
			grid-column: 1/-1

	&__item--grid-last
		@media $md
			grid-column 1/-1

	&__item--grid-3
		grid-column: 1 / 3
		grid-row: 3

		@media $md
			grid-column: unset

	&__item-bg
		width 100%
		height: 100%
		position absolute
		top 0
		left 0

		& img,
		& picture
			height 100%
			object-fit: cover

	&__item-content
		position relative
		width: 100%
		z-index 1
		display flex
		flex-direction: column
		max-width: 60%
		min-height 240px

		@media $b-sm
			min-height: auto
			height 100%
			max-width: 100%

	&__item-content--max-width
		max-width: 80%

		@media $md
			max-width: 60%

		@media $b-sm
			max-width: 100%

	&__item-title
		fz-24()
		line-height 32px
		padding-bottom 15px
		color $white
		font-family: $Inter
		font-weight bold

	&__item-text
		fz-14()
		line-height 24px
		color: $white
		padding-bottom 15px
		font-family $Inter
		font-weight 500
		flex 1 1 auto

	&__link
		fz-14()
		color: $white
		text-decoration: none
		border: 1px solid $white
		padding: 14px 50px
		display: inline-block
		vertical-align: bottom
		max-width: 138px
		text-align: center
		flex 0 0 auto

	&__img
		position absolute
		right 15px

		@media $b-sm
			position relative
			right 0
			float: right
			padding-left: 10px;
			shape-outside: inset(0 round 41% 0);

	&__img--rs
		bottom -80px

		@media $b-sm
			width: 320px
			margin-right -50px
			margin-top -32px
			bottom 0

	&__img--chanti
		@media $b-sm
			width: 109px

	&__img--gancia
		@media $b-sm
			width: 144px

	&__img--darrow
		@media $b-sm
			width 115px

	&__img--bravo
		@media $md
			width: 109px
			bottom: -60px

		@media $b-sm
			width 153px
			bottom: unset

	&__img--gancia3
		bottom -80px

		@media $md
			bottom: unset
			top: 20px
			right 78px
			width: 103px

		@media $b-sm
			bottom 0
			top unset
			right unset
			width: 108px

	&__img--grants
		bottom: -130px

		@media $b-sm
			bottom 0
			width: 126px

	&__img--martin
		right -40px
		bottom -60px

		@media $md
			right 15px

		@media $b-sm
			width 333px
			right 0
			bottom 0
			margin-right -15%
			display flex
			align-items flex-end

	&__img--jager
		@media $b-sm
			width: 191px

	&__img--zb
		bottom -60px

		@media $b-sm
			bottom 0
			width: 119px

	&__img--cr
		@media $b-sm
			width 113px

	&__img--rum
		@media $b-sm
			width: 132px

	&__img--sierra
		@media $b-sm
			width 178px

	&__img--botanist
		@media $md
			right: 78px

		@media $b-sm
			right 0
			width: 151px

	&__sub-text
		fz-13()
		line-height 20px
		color: #596876

		@media $md
			padding 0 40px
			text-align center
