.box__content--contacts
    background-color #272E3F
.box__content--contacts::before
    content ''
    position absolute
    top 0
    left 50%
    transform translate(-50%, 0)
    width 100%
    height 1000px
    background-image url('../img/contacts-bg.png')
    background-position center
    background-repeat no-repeat
    background-size cover
.contacts__top-section
    padding-bottom 38px
.top__title.top__title--contacts
    margin-top -53px
    padding-bottom 38px
.top__text--contacts
    &.top__text--country
        color #00F0FF
        margin-bottom 30px
    &.top__text--name
        margin-bottom 25px
    &.top__text--address
    &.top__text--telephone
    &.top__text--mail
        max-width 190px
        font-size 15px
        line-height 24px
        margin-bottom 15px
    &.top__text--telephone
        text-decoration none
        display block
    &.top__text--mail
        text-decoration none
        display block
        margin-bottom 53px
.top__content--contacts
    @media $sm
        padding-top 160px
    & .top__btn
      border 2px solid #ffffff
    & .top__btn-text
        background transparent
        padding 13px 58px
        position relative
        z-index 1
.contacts
    padding-bottom 77px
    @media $md
        padding-bottom 60px
    @media $sm
        padding-bottom 53px
    &__local
        padding 30px 0 0
        @media $md
            padding 0
        @media $sm
            margin-bottom 40px
    &__list
        position relative
        z-index 1
        display grid
        grid-template-columns repeat(3, 31.5%)
        grid-template-rows repeat(auto-fill, minmax(148px, auto))
        column-gap 20px
        row-gap 16px
        margin 0
        @media $md
            grid-template-columns repeat(2, 50%)
            row-gap 40px
        @media $sm
            grid-template-columns repeat(1, 100%)
            row-gap 40px
    &__list:nth-child(2)
        padding 89px 0 0
    &__list-multi
        padding 99px 0 0
        row-gap 93px
        @media $md
            row-gap 80px
    &__title
        position absolute
        top -29px
        left 0
        font-size 21px
        line-height 29px
        color #00F0FF
        margin-bottom auto
    &__li
        position relative
        display flex
        flex-direction column
        justify-content flex-start
    &__li-title
        display flex
        font-size 15px
        line-height 24px
        color #ffffff
        margin-top 30px
        margin-bottom 20px
    &__li-title--factory::before
        content ''
        display block
        width 24px
        height 24px
        background-image url('../img/i-factory.svg')
        background-position center
        background-repeat no-repeat
        background-size cover
        margin-right 15px
    &__li-address
    &__li-tel
    &__li-link
        font-size 13px
        line-height 20px
        color #ffffff
    &__li-address
    &__li-tel
        opacity 0.8
        margin-bottom 10px
    &__li-address
        max-width 255px
        @media $md
            max-width 290px
    &__li-link
        text-decoration none
    &__li-link:hover
    &__li-link:focus
        text-decoration underline
.del:before
    content none
.contacts__footer-wrap
    margin-top -40px
    $lg
        margin-top 0
