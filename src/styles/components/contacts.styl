.box__content--contacts
    background-color #272E3F
.box__content--contacts::before
    content ''
    position absolute
    top 0
    left 50%
    transform translate(-50%, 0)
    width 100%
    height 1000px
    background-image url('../img/contacts-bg.png')
    background-position center
    background-repeat no-repeat
    background-size cover
.top__text--contacts
    &.top__text--country
        color #00F0FF
        margin-bottom 30px
    &.top__text--name
        margin-bottom 25px
    &.top__text--address
    &.top__text--telephone
    &.top__text--mail
        max-width 190px
        font-size 15px
        line-height 24px
        margin-bottom 15px
    &.top__text--telephone
        text-decoration none
        display block
    &.top__text--mail
        text-decoration none
        display block
        margin-bottom 54px
.top__content--contacts .top__btn-text
    background transparent
    border 2px solid #ffffff
    padding 14px 58px
.top__content--contacts .top__btn-text:hover
    background #ffffff
    color #272E3F
.contacts
    &__list
        display grid
        grid-template-columns: repeat(3, 33.033%)
        grid-template-rows: repeat(auto-fill, minmax(148px, auto))
        column-gap: 20px
        row-gap: 46px
        margin 0
    &__local
        margin-bottom 80px
        padding 30px 0 0
    &__title
        font-size 21px
        line-height 29px
        color #00F0FF
        margin-bottom 30px
    &__li
        display flex
        flex-direction column
        justify-content flex-end
    &__li-title
        display flex
        font-size 15px
        line-height 24px
        color #ffffff
        margin-bottom 20px
    &__li-title--factory::before
        content ''
        display block
        width 24px
        height 24px
        background-image url('../img/i-factory.svg')
        background-position center
        background-repeat no-repeat
        background-size cover
        margin-right 15px
    &__li-address
    &__li-tel
    &__li-link
        font-size 13px
        line-height 20px
        color #ffffff
    &__li-address
    &__li-tel
        opacity 0.8
        margin-bottom 10px
    &__li-address
        max-width 220px
    &__li-link
        text-decoration none
    &__li-link:hover
    &__li-link:focus
        text-decoration underline