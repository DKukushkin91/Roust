.popup-form
	&__wrap
		display block
		text-align center
		background-color: rgba(0,0,0,0.7);
		z-index: 99999999;
		position: fixed;
		width: 100%;
		height: 100%;
		top: 0;
		right: 0
		bottom: 0
		left 0
		overflow: auto

		@media $lg
			display: flex
			align-items: center
			justify-content: center

		@media $md
			display block

		@media $b-sm
			background-color $white

		&::before
			content: '';
			display: inline-block;
			height: 100%;
			vertical-align: middle;

			@media $lg
				display: none

			@media $md
				display inline-block

			@media $b-sm
				display none

	&__form
		opacity: 0
		position: relative
		width: 100%
		max-width: 1100px
		display: inline-block;
		vertical-align: middle;
		background $white
		transition all 1s ease 0s

		@media $md
			max-width: 608px

		@media $b-sm
			max-width: 100%

	&__wrap--active
		opacity: 1

	&__close-btn
		position: absolute
		top 50px
		right 45px
		background: 0
		border: 0
		border-radius: 0
		width 22px
		height 22px
		cursor pointer

		@media $md
			top 15px
			right 15px

	&__icon
		stroke: $orange

	&__fieldset
		margin 0
		border 0
		padding 61px 87px 75px 97px
		display grid
		grid-template-columns: repeat(auto-fill, calc(50% - 40px))
		column-gap: 80px
		row-gap: 30px

		@media $md
			padding: 40px 51px
			display flex
			flex-direction: column
			column-gap: unset
			row-gap: unset

		@media $sm
			padding: 45px 20px
	&__fieldset.d-flex
		display flex
		flex-direction column

	&__title
		fz-33()
		line-height 39px
		font-family $Inter
		font-weight 900
		padding-bottom 12px
		text-align left
		text-transform uppercase
		color $d-grey
		grid-column: 1 / 3

	&__input-group
		display flex
		flex-direction column
		align-items flex-start
		position relative

		@media $md
			padding-bottom 20px

		&--textarea
			grid-column: 1 / 3

	&__label
		fz-13()
		line-height 20px
		font-weight 400
		font-family $Inter
		color $m-grey
		position relative
		padding-bottom 5px
		text-align: left

	&__input
		background-color $h-grey
		border 0
		border-radius 4px
		padding 11px 17px
		fz-15()
		line-height 24px
		font-family $Inter
		font-weight 500
		color $d-grey
		width 100%
		order: 2

		&::placeholder
			fz-15()
			line-height 24px
			font-family $Inter
			font-weight 500
			color $d-grey

	&__input:required + .popup-form__label::after,
	&__textarea:required + .popup-form__label::after
		content: '*'
		font-style inherit
		font-size inherit
		font-weight inherit
		line-height inherit
		color: $orange
		margin-left 5px

	&__textarea
			fz-15()
			line-height 24px
			font-family $Inter
			font-weight 500
			color $d-grey
			resize: none
			width 100%
			height: 125px
			border: 0
			border-radius: 4px
			background: $h-grey
			padding: 11px 17px
			order 2

	&__text
		fz-13()
		line-height 20px
		font-family $Inter
		font-weight normal
		text-align: left
		color $d-grey

		@media $md
			padding-bottom 20px

		&--color
			color $orange

	&__inner
		width 100%
		grid-column: 1 / 3
		display flex
		flex-direction row
		justify-content space-between
		position relative

	&__inner--column
		flex-direction: column

	&__upload-input
			width: 0.1px
			height: 0.1px
			opacity: 0
			overflow: hidden
			position: absolute
			z-index: -1

	&__upload-input + .popup-form__upload-label
		fz-15()
		line-height 18px
		font-weight 700
		font-family $Inter
		color $orange
		background 0
		display inline-block
		cursor pointer
		border 2px solid $orange
		vertical-align middle
		padding: 14px
		width 100%
		max-width: 210px

	&__upload-label--inline
		display inline-block
		margin-right 5px
		color: $orange
		cursor pointer

	&__upload-content
		fz-15()
		line-height 24px
		font-family $Inter
		font-weight 500
		color $d-grey
		text-align: left
		padding-bottom 40px

	&__checkbox-group
		display flex
		flex-direction: row
		padding-bottom 40px

	&__checkbox-group:last-child
		padding-bottom 0

	&__checkbox-input
		position: absolute
		z-index -1
		opacity: 0

		& + label
			display inline-flex
			align-items: center
			user-select: none
			cursor pointer

		& + label::before
			content: ''
			display: inline-block
			width: 20px
			height: 20px
			flex-shrink: 0
			flex-grow: 0
			border: 1px solid #95A4B1
			background-repeat: no-repeat
			background-position: center center
			background-size: 50% 50%
			margin-right: 8px

		&:checked + label::before
			background-color: $orange
			background-image url(../img/icons-check.svg)
			background-repeat no-repeat
			background-position center
			background-size auto
			border 1px solid transparent

	&__checkbox-label
		fz-13()
		line-height 20px
		font-weight 400
		font-family $Inter
		color $d-grey

	&__checkbox-link
		fz-13()
		text-decoration: none
		line-height 20px
		font-weight 400
		font-family $Inter
		color $orange
		margin-left 5px
		display: inline-block

	&__btn
		fz-15()
		background $orange
		border: 0
		border-radius: 0
		padding: 14px
		text-align: center
		width: 100%
		max-width: 173px
		line-height 18px
		font-weight 700
		font-family $Inter
		color: $white
		cursor pointer

	&__error-text
		fz-13()
		text-align: left
		color: red
		position absolute
		bottom -20px
		left 0
		opacity: 0
		transition: all 1s ease 0s

		@media $md
			bottom 0

	&__inner .popup-form__error-text
		bottom: -20px

.invalid .popup-form__error-text
	opacity: 1;
