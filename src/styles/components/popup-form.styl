.popup-form
	&__wrap
		display block
		text-align center
		background-color: rgba(0,0,0,0.7);
		z-index: 99999999;
		position: fixed;
		width: 100%;
		height: 100%;
		top: 0;
		right: 0
		bottom: 0
		left 0

		&::before {
			content: '';
			display: inline-block;
			height: 100%;
			vertical-align: middle;
		}

	&__form
		position: relative
		width: 100%
		max-width: 1100px
		display: inline-block;
		vertical-align: middle;
		background $white

	&__close-btn
		position: absolute
		top 50px
		right 45px
		background: 0
		border: 0
		border-radius: 0
		width 22px
		height 22px
		cursor pointer

	&__icon
		stroke: $orange

	&__fieldset
		margin 0
		border 0
		padding 61px 87px 75px 97px
		display grid
		grid-template-columns: repeat(auto-fill, minmax(290px, 418px))
		column-gap: 80px
		row-gap: 30px

	&__title
		fz-33()
		line-height 39px
		font-family $Inter
		font-weight 900
		padding-bottom 12px
		text-align left
		text-transform uppercase
		color $d-grey
		grid-column: 1 / 3

	&__input-group
		display flex
		flex-direction column-reverse
		align-items flex-start

		&--textarea
			grid-column: 1 / 3

	&__label
		fz-13()
		line-height 20px
		font-weight 400
		font-family $Inter
		color $m-grey
		position relative
		padding-bottom 5px
		text-align: left

	&__input
		background-color $h-grey
		border 0
		border-radius 4px
		padding 11px 17px
		fz-15()
		line-height 24px
		font-family $Inter
		font-weight 500
		color $d-grey
		width 100%

		&::placeholder
			fz-15()
			line-height 24px
			font-family $Inter
			font-weight 500
			color $d-grey

	&__input:required + .popup-form__label::after,
	&__textarea:required + .popup-form__label::after
		content: '*'
		font-style inherit
		font-size inherit
		font-weight inherit
		line-height inherit
		color: $orange
		margin-left 5px

	&__textarea
			fz-15()
			line-height 24px
			font-family $Inter
			font-weight 500
			color $d-grey
			resize: none
			width 100%
			height: 125px
			border: 0
			border-radius: 4px
			background: $h-grey
			padding: 11px 17px

	&__text
		fz-13()
		line-height 20px
		font-family $Inter
		font-weight normal
		text-align: left
		color $d-grey

		&--color
			color $orange

	&__inner
		width 100%
		grid-column: 1 / 3
		display flex
		flex-direction row
		justify-content space-between

	&__upload-input
			width: 0.1px
			height: 0.1px
			opacity: 0
			overflow: hidden
			position: absolute
			z-index: -1

	&__upload-input + .popup-form__upload-label
		fz-15()
		line-height 18px
		font-weight 700
		font-family $Inter
		color $orange
		background 0
		display inline-block
		cursor pointer
		border 2px solid $orange
		vertical-align middle
		padding: 14px
		width 100%
		max-width: 210px

	&__btn
		background $orange
		border: 0
		border-radius: 0
		padding: 14px
		text-align: center
		width: 100%
		max-width: 173px
		fz-15()
		line-height 18px
		font-weight 700
		font-family $Inter
		color: $white
		cursor pointer
