.search-popup
	display: block;
	text-align: center;
	background-color: rgba(0,0,0,0.7);
	z-index: 99999999;
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	right: 0
	bottom: 0
	left 0
	overflow: auto

	&::before {
		content: '';
		display: inline-block;
		height: 100%;
		vertical-align: middle;
	}

	&__wrap
		position: relative
		width: 100%
		max-width: 1100px
		display: inline-block;
		vertical-align: middle;
		background-color: $white
		padding: 60px 90px

	&__close-btn
		background: 0
		border: 0
		position: absolute
		width 22px
		height 22px
		top: 50px
		right: 45px
		cursor pointer

	&__icon
		stroke: $orange

	&__title
		fz-33()
		line-height 120%
		color $d-grey
		font-family $Inter
		font-weight 900
		text-align: left
		padding-bottom 33px
		text-transform: uppercase

	&__form
		width 100%
		display: flex
		flex-wrap: wrap
		padding-bottom 51px

	&__input
		fz-15()
		line-height 24px
		font-weight 500
		font-family $Inter
		color $d-grey
		border 0
		border-radius: 4px
		background-color: $h-grey
		padding 11px 17px
		flex: 1 1 723px

		&::placeholder
			fz-15()
			line-height 24px
			font-weight 500
			font-family $Inter
			color $d-grey
			opacity: 0.3

	&__btn
		fz-15()
		line-height 18px
		font-family $Inter
		font-weight 700
		padding: 14px 60px
		text-align: center
		color $white
		margin-left 20px
		border: 0
		background-color: $orange
		cursor pointer

	&__list
		list-style: none
		padding 0
		margin 0
		width 100%

	&__item
		width 100%
		text-align: left

		&:not(:last-child)
			padding-bottom 60px

	&__sub-title
		fz-24()
		line-height 120%
		font-family $Inter
		font-weight 700
		color $d-grey
		text-align: left
		padding-bottom 10px

	&__text
		fz-15()
		line-height 120%
		color $d-grey
		font-family $Inter
		font-weight 500
		text-align: left

		&:not(:last-child)
			padding-bottom 10px

	&__link
		fz-15()
		line-height 120%
		text-decoration: none
		color $orange
		font-family $Inter
		font-weight 500
		text-align: left
