.search-popup
	display: block;
	text-align: center;
	background-color: rgba(0,0,0,0.7);
	z-index: 99999999;
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	right: 0
	bottom: 0
	left 0
	overflow: auto

	@media $b-sm
		background-color: $white

	&::before
		content: '';
		display: inline-block;
		height: 100%;
		vertical-align: middle;

		@media $b-sm
			display: none

	&__wrap
		opacity: 0
		position: relative
		width: 100%
		max-width: 1100px
		display: inline-block;
		vertical-align: middle;
		background-color: $white
		padding: 60px 90px
		transition: all 0.7s ease 0s

		@media $lg
			padding: 51px 40px
			width: 608px

		@media $b-sm
			width 100%
			padding 20px

	&__wrap--active
		opacity: 1

	&__close-btn
		background: 0
		border: 0
		position: absolute
		width 22px
		height 22px
		top: 50px
		right: 45px
		cursor pointer

		@media $b-sm
			top 20px
			right 20px

	&__icon
		stroke: $orange

	&__title
		fz-33()
		line-height 120%
		color $d-grey
		font-family $Inter
		font-weight 900
		text-align: left
		padding-bottom 33px
		text-transform: uppercase

	&__form
		width 100%
		display: flex
		flex-wrap: wrap
		padding-bottom 51px

		@media $lg
			padding-bottom 30px

		@media $b-sm
			justify-content: center

	&__input
		fz-15()
		line-height 24px
		font-weight 500
		font-family $Inter
		color $d-grey
		border 0
		border-radius: 4px
		background-color: $h-grey
		padding 11px 17px
		flex: 1 1 723px

		@media $lg
			flex 1 1 346px

		@media $b-sm
			width 100%
			margin-bottom 20px

		&::placeholder
			fz-15()
			line-height 24px
			font-weight 500
			font-family $Inter
			color $d-grey
			opacity: 0.3

	&__btn
		fz-15()
		line-height 18px
		font-family $Inter
		font-weight 700
		padding: 14px 60px
		text-align: center
		color $white
		margin-left 20px
		border: 0
		background-color: $orange
		cursor pointer

		@media $lg
			margin-left 10px

		@media $b-sm
			margin 0

	&__list
		list-style: none
		padding 0
		margin 0
		width 100%

	&__item
		width 100%
		text-align: left

		&:not(:last-child)
			padding-bottom 60px

	&__sub-title
		fz-24()
		line-height 120%
		font-family $Inter
		font-weight 700
		color $d-grey
		text-align: left
		padding-bottom 10px

	&__text
		fz-15()
		line-height 120%
		color $d-grey
		font-family $Inter
		font-weight 500
		text-align: left

		&:not(:last-child)
			padding-bottom 10px

	&__link
		fz-15()
		line-height 120%
		text-decoration: none
		color $orange
		font-family $Inter
		font-weight 500
		text-align: left
