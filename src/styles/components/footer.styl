.footer
	width: 100%
	position: relative
	z-index: 1
	padding: 40px 20px 56px 20px

	&__wrap
		width: 100%
		display: flex
		flex-direction: row
		flex-wrap: wrap
		justify-content: space-between
		position: relative
		padding-top: 94px
		padding-bottom 137px
		overflow: hidden

		&::before
			content: ''
			position: absolute
			width: 100vw
			height: 3px
			background-image: url('/f/img/f-line.png')
			background-repeat: no-repeat
			background-position: -17% 0
			top: 0
			left: 0

	&__content
		display: flex
		flex-direction: column
		justify-content: space-between

	&__social
		width: 100%

	&__social-list
		list-style: none
		padding: 0
		margin: 0
		display: flex
		flex-direction: row
		align-items: center
		justify-content: flex-start
		height: 30px
		max-width: 171px

	&__social-item
		width: 100%

		&:not(:last-child)
			margin-right: 40px

	&__social-item--fb
		width: 18px
		height: 30px

		& .footer__social-link
			background-position: 0 0

	&__social-item--inst
		width: 25px
		height: 30px

		& .footer__social-link
			background-position: -70px 0

	&__social-item--vk
		width: 32px
		height: 30px

		& .footer__social-link
			background-position: -140px 0

	&__social-link
		display: block
		background-image: url('/f/img/social.png');
		background-repeat: no-repeat
		width: 100%
		height: 100%
		text-decoration: none

	&__copyright-text
		fz-15()
		line-height 24px
		color: $d-gray

	&__list
		list-style: none
		margin: 0
		padding: 0
		display: flex
		flex-direction: column

	&__item
		&:not(:last-child)
			padding-bottom: 20px

	&__link
		fz-15()
		line-height 24px
		text-decoration: none
		color: $d-gray

	&__btn
		border: 0
		background: 0
		position: absolute
		bottom: 0
		left: calc(50% - 7px)
		cursor pointer
		margin: 0 auto

	&__icon
		fill: $d-gray
		width: 14px
		height: 9px
		transform: rotate(-180deg)
