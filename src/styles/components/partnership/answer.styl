.answer
	width: 100%

	&__container
		padding-top: 87px
		padding-bottom 44px

	&__wrap
		text-align: left
		max-width: 40%

	&__text
		fz-21()
		line-height 29px
		font-family $Inter
		color: $d-grey
		padding-bottom 45px

	&__btn
		background: 0
		border: 0
		border-radius: 0
		cursor pointer
		text-align: center

	&__btn-text
		fz-15()
		display block
		font-family $Inter
		font-weight bold
		line-height 18px
		text-align: center
		color: $white
		border: 1px solid $white
		background $orange
		padding 14px 60px
