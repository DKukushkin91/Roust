.price
	width: 100%
	background-image: url('/f/img/bg-corporate.jpg')
	background-repeat no-repeat
	background-position 0 0
	background-size: cover

	&__container
		padding-top: 75px
		padding-bottom 116px

		@media $md
			padding-top 45px
			padding-bottom 65px

	&__wrap
		width: 100%
		display: flex
		flex-direction: row
		flex-wrap: wrap

	&__title
		fz-33()
		font-family $Inter
		line-height 39px
		font-weight 900
		color: $white
		max-width: 543px
		margin-right: 100px
		padding-bottom 10px

		@media $xs
			margin-right 0

	&__inner
		max-width: 374px

		@media $xs
			max-width: 100%

	&__text
		fz-15()
		font-family $Inter
		line-height 24px
		font-weight normal
		color: $white
		padding-bottom 37px

	&__btn
		background: 0
		border: 0
		border-radius: 0
		cursor pointer
		text-align: center

	&__btn-text
		fz-15()
		display block
		font-family $Inter
		font-weight bold
		line-height 18px
		color: $white
		border: 1px solid $white
		padding 14px 60px
