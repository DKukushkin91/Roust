		background-position: 0 0
		background-size: 100% 100%
		background-repeat: no-repeat
		padding: 28px 53px
		text-align: center

		@media $lg
			max-width: 211px

		@media $md
			max-width: 162px

		@media $sm
			padding: 10%

		&:not(:last-child)
			margin-bottom 57px

			@media $lg
				margin-bottom 0
				margin-right 20px

			@media $sm
				margin-right 1%

	&__text-awards
		fz-15()
		color: $white
		font-family $Inter
		font-weight 900
		line-height 24px

		&:not(:last-child)
			padding-bottom 4px

	&__text-awards sup
		fz-13()
		font-weight normal

		@media $md
			font-size 9px

	&__text-awards--fz
		fz-33()
		line-height 100%

	&__text-awards--fw
		fz-13()
		line-height 16px
		font-weight 500

		@media $md
			font-size 9px
			line-height 12px

	&__picture
		position: absolute
		top: 0
		right: 0
		max-width 226px

		// &--animate
		// 	max-width: 176px
		// 	top: -20%

	&__scroll-btn
		position fixed
		display: block
		margin: 0 auto
		margin-top: 66px
		width: 143px
		min-height: 50px
		left 0
		right 0
		bottom 0
		background: 0
		border: 0
		border-radius: 0
		opacity: 1
		transition: all 0.2s ease 0s

		@media $xl
			cursor pointer

		@media $lg
			position absolute
			margin-top 0

		@media (max-width: 640px)
			bottom -3px

		&:hover
			@media $xl
				width 160px

		& svg
			display: block
			width: 100%
			height: 100%

	&__scroll-btn--animate
		opacity 0

	&__img-slider.swiper
		z-index 0
		top: 0
		right: 0
		transition: all 0.6s linear 0s
		position: absolute
		max-width 226px

		@media (max-width: 640px)
			position relative
			max-width: 164px
			margin-bottom -30%

	&__picture--animate.swiper
		max-width: 14.33333333%
		top: -20.33333333%

		@media (max-width: 1460px)
			right 7vw

	&__img-wrapper.swiper-wrapper
		align-items: flex-end

	&__sub-content
		display: flex
		flex-direction: row
		flex-wrap: wrap
		padding-bottom 30px

		@media $sm
			max-width: 182px

	&__sub-text-content
		display flex
		flex-direction: column
		margin-right: 30px

		@media $md
			margin-right 0
			margin-bottom 20px

	&__sub-text
		fz-15()
		line-height 24px
		font-weight 900
		font-family $Inter
		color $white
		text-align: left

		&:not(:last-child)
			padding-bottom 10px

	&__sub-text--font
		fz-13()
		line-height 20px
		font-weight 400
		opacity: 0.6
