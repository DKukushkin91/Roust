.side
	width 100%
	height: 100%
	position: fixed
	top: 0
	right: 0
	display: flex
	flex-direction: row-reverse
	align-items: center
	z-index: 100

	@media $md
		flex-direction: column
		align-items: center
		justify-content: center

	&::before
		content: ''
		position absolute
		top 0
		left: 0
		background $d-grey
		opacity: 0.6
		width: 100%
		height: 100%
		z-index 11
		display block

	&__wrap
		opacity: 0
		background-color: $white
		display: flex
		flex-direction: column
		align-items: center
		justify-content: center
		width 36%
		height: 100%
		position relative
		z-index 14
		transition: all 1s ease 0s

		@media $lg
			width 50%

		@media $md
			width 100%
			max-width: 608px
			background-color: transparent

		@media $sm
			justify-content: flex-start
			background-color: $white

	&__wrap--active
		opacity: 1
		transition: all 1s ease 0s

	&__wrap--width
		width 40.9%

	&__content
		width 100%
		height 100%
		padding: 80px
		overflow: auto
		background-color: $white

		@media $md
			padding: 60px 70px
			height: fit-content

		@media $sm
			padding: 20px

	&__back-btn
		display flex
		flex-direction: row
		flex-wrap: wrap
		align-items: flex-start
		background: 0
		border 0
		cursor pointer
		margin-bottom: 31px

	&__icon
		width 16px
		height 16px
		fill: $orange
		margin-right: 13px

	&__btn-text
		fz-15()
		line-height 18px
		font-weight 700
		font-family $Inter
		display block
		color: $d-grey

	&__top
		width 100%
		display flex
		flex-direction: row
		flex-wrap: wrap
		align-items: flex-start
		justify-content: flex-start
		padding-bottom 44px

	&__img
		max-width: 140px
		margin-right: 33px

	&__img--order
		width 100%
		max-width: 450px
		margin-right 0
		order: 2

	&__texts-wrap
		max-width: 293px

	&__texts-wrap--order
		max-width: 100%
		order: 1
		padding-bottom 30px

	&__title
		fz-33()
		line-height 40px
		font-weight 900
		font-family $Inter
		color $d-grey
		padding-bottom 20px

	&__sub-title
		fz-15()
		line-height 24px
		font-family $Inter
		font-weight 500
		color: $m-grey

	&__main
		width 100%

	&__text
		fz-15()
		line-height 24px
		color $d-grey
		font-family $Inter
		font-weight 500

	&__list
		list-style: none
		padding 0
		margin 0
		display flex
		flex-direction: column

	&__item
		width 100%
		max-width: 450px
		background: linear-gradient(331.05deg, rgba(255, 255, 255, 0.5) 0%, rgba(255, 255, 255, 0) 100%), #E7EFF5;
		padding: 30px

		&:not(:last-child)
			margin-bottom 10px

	&__item-date
		fz-14()
		line-height 29px
		color $orange
		font-family $Georgia
		font-weight 700
		display block
		padding-bottom 30px

	&__item-content
		display flex
		flex-direction: row
		flex-wrap: wrap
		align-items: center

		&:not(:last-child)
			padding-bottom 30px

	&__item-icon
		width 100%
		max-width: 52px
		margin-right 27px

	&__item-text
		fz-21()
		line-height 29px
		color $black
		font-family $Inter
		font-weight 500
		max-width: 311px

	&__item-link
		fz-13()
		line-height 20px
		font-weight 400
		font-family $Inter
		color $orange
		text-decoration: none

