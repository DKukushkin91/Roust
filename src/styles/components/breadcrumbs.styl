.breadcrumbs
	display: block
	width: 100%
	padding-bottom 56px

	&__list
		list-style: none
		display: flex
		flex-direction: row
		padding 0
		margin 0

	&__item
		color: $white
		position relative

		&:not(:last-child)
			margin-right 19px

			&::before
				content: '/'
				fz-13()
				color: $m-grey
				font-family $Inter
				position absolute
				width: 2px
				height 100%
				right: -(@margin-right / 2)
				top: 0

		&:last-child
			color: $m-grey

	&__link
		fz-13()
		display block
		font-family: $Inter
		font-weight 500
		text-decoration: none
		color: inherit
