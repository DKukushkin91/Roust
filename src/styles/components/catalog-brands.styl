.catalog-brands
    &__filter
        width 100%
        display flex
    &__title
        font-weight 900
        font-size 33px
        line-height 40px
        color #323639
        padding 40px 0 34px
    & .brands__item:first-child
        grid-row 1
    & .brands__item:nth-child(4)
        grid-column 1
    &__link
        position absolute
        z-index 2
        top 0
        left 0
        width 100%
        height 100%
        text-decoration none
    & .brands__item
        padding 20px 40px 27px
    &__item-content
        width 100%
        min-height 316px
        position relative
        z-index 1
        display flex
        flex-direction column
        align-items center
    &__item-title
        font-weight 500
        font-size 21px
        line-height 29px
        color #000000
        margin-bottom 11px
    &__item-text
        font-weight 600
        font-size 14px
        line-height 20px
        color #596876
.filter-title
    font-size 13px
    line-height 20px
    color #596876
    margin-bottom 6px
.filter
    &__spirit
        margin-right 30px
    &__search
        margin-left auto
    &__search-input
        width 391px
        padding 10px 17px
        border 1px solid #DFE6EB
        border-radius 4px
        font-weight 500
        font-size 15px
        line-height 24px
        color #323639
        outline none
    &__search-input::placeholder
        color #BDBDBD
    &__search-btn
        width 172px
        background #ffffff
        border 2px solid #323639
        font-weight bold
        font-size 15px
        line-height 18px
        padding 12px 0
        cursor pointer
