.catalog-brands
    & .breadcrumbs__item
      color: #C4C4C4;
      &:not(:last-child)::before
        color inherit

    & .breadcrumbs__item:last-child
      color $d-grey

    &.brands
        @media $md
            padding 31px 0 25px 0

    &.brands .container
        padding 0
    & .brands__list
        @media $md
            grid-template-columns repeat(2,50%)
            grid-template-rows repeat(2,minmax(381px,auto))
            column-gap 6px
            row-gap 6px
        @media $sm
            grid-template-columns repeat(1,100%)
            grid-template-rows repeat(1,minmax(375px,auto))
            column-gap 0
    & .brands__item
      padding: 0
      display: grid

    & .brands__item:first-child
        grid-row 1
    & .brands__item:nth-child(4)
        grid-column 1

    & .brands__img
      position static
      grid-area: 1 / -1
      & img
        height 100%
        object-fit: cover

    &__filter
        width 100%
        display flex
        @media $md
            flex-wrap wrap
            padding 0 40px
        @media $sm
            padding 0 20px
    &__title
        font-weight 900
        font-size 33px
        line-height 40px
        color #323639
        padding 40px 0 34px
        @media $sm
            font-size 28px
            line-height 34px
            text-align center
            padding 53px 0 44px
    &__link
        position absolute
        z-index 2
        top 0
        left 0
        width 100%
        height 100%
        text-decoration none
    &__item-content
        grid-area: 1 / -1
        width 100%
        min-height 316px
        position relative
        z-index 1
        display flex
        flex-direction column
        align-items center
    &__item-title
        font-weight 500
        font-size 21px
        line-height 29px
        color #000000
        padding: 13px
    &__item-text
        font-weight 600
        font-size 14px
        line-height 20px
        color #596876
.filter-title
    font-size 13px
    line-height 20px
    color #596876
    margin-bottom 6px
.filter
    &__spirit
        margin-right 30px
        @media $md
            width 100%
            max-width 335px
            margin-right 18px
            margin-bottom 40px
        @media screen and (max-width: 767px)
            margin-right 0
    &__countries
        @media $md
            width 100%
            max-width 335px
        @media screen and (max-width: 767px)
            margin-bottom 40px
    &__search
        margin-left auto
        @media $md
            width 100%
    &__search-input
        width 391px
        padding 10px 17px
        border 1px solid #DFE6EB
        border-radius 4px
        font-weight 500
        font-size 15px
        line-height 24px
        color #323639
        outline none
        @media $md
            width 100%
            margin-bottom 40px
    &__search-input::placeholder
        color #BDBDBD
    &__search-btn
        width 172px
        background #ffffff
        border 2px solid #323639
        font-weight bold
        font-size 15px
        line-height 18px
        padding 12px 0
        cursor pointer
      @media $sm
          display block
          margin 0 auto
    &__search-btn-text
      position relative
      z-index 1
