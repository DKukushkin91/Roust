.career-contacts
	width: 100%
	position relative

	&__img
		width: 100%
		height 100%
		position: absolute
		top: 0
		left: 0

		& img,
		& picture
			height: 100%
			object-fit: cover
			object-position: top

	&__wrap
		width: 100%
		padding: 88px 0 97px 0
		position relative

	&__title
		fz-33()
		line-height 39px
		color: $d-grey
		padding-bottom 30px
		font-family $Inter
		font-weight 900

	&__sub-title
		fz-21()
		line-height 29px
		font-family $Inter
		font-weight 500
		padding-bottom 66px
		color: $d-grey

	&__list
		padding 0
		margin 0
		list-style: none
		display flex
		flex-direction: row
		flex-wrap: wrap
		margin: -20px -65px
		width: 100%
		padding-bottom 68px

	&__item
		margin: 20px 65px
		flex: 1 0 154px
		max-width: 154px

	&__item-title
		fz-15()
		line-height 24px
		color: $d-grey
		padding-bottom 10px
		font-weight 900

	&__link
		fz-15()
		text-decoration: none
		display: flex
		flex-direction: row
		flex-wrap: wrap
		color: $d-grey
		line-height 24px
		font-family $Inter
		align-items: center
		font-weight 500

	&__icon
		fill: $orange
		width: 24px
		height: 20px
		margin-right: 9px

	&__link-text
		fz-15()
		color: $d-grey
		line-height 24px
		font-family $Inter
		font-weight 500

	&__text
		fz-15()
		color: $d-grey
		line-height 24px
		font-family $Inter
		font-weight 500
		padding-bottom 45px
		text-align: left
		max-width: 396px

	&__btn
		display: block
		width: 100%
		max-width: 258px
		border: 2px solid $d-grey

	&__btn-text
		color: $d-grey
		background: 0
