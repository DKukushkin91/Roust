.career
	width: 100%

	&__wrap
		padding 79px 0 124px 0

		@media $md
			padding-top 40px
			padding-bottom 40px

	&__title
		fz-33()
		line-height 39.94px
		font-weight 900
		font-family $Inter
		color: $d-grey
		padding-bottom 59px

		@media $md
			padding-bottom 40px

	&__list
		list-style none
		display flex
		flex-direction row
		flex-wrap: wrap
		justify-content: space-between
		align-items flex-start
		margin 0
		padding 0

		@media $md
			display: grid
			grid-template-columns: repeat(auto-fill, calc(50% - 40px))
			grid-row-gap 34px
			grid-column-gap: 40px

	&__item
		flex 1 0 292px
		max-width 292px
		position relative
		padding-top 104px

		&:not(:last-child)
			margin-right: 100px

			@media $md
				margin-right 0

	&__img
		position absolute
		top 11px
		left 0
		max-width 94px
		margin-bottom 18px

		&--width
			max-width: 86px
			top: 0

		&--m-width
			max-width 75px
			top 0

	&__sub-title
		fz-21()
		line-height 29px
		color $d-grey
		font-family $Inter
		font-weight 500
		padding-bottom 15px

	&__text
		fz-15()
		line-height 24px
		color $m-grey
		font-weight 500
		font-family $Inter
