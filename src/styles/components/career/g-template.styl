.g-template
	&__container
		display: block;
		text-align: center;
		background-color: rgba(0,0,0,0.7);
		z-index: 99999999;
		position: fixed;
		width: 100%;
		height: 100%;
		top: 0;
		right: 0
		bottom: 0
		left 0
		overflow: auto

		&::before {
			content: '';
			display: inline-block;
			height: 100%;
			vertical-align: middle;
		}

	&__wrap
		position: relative
		width: 100%
		max-width: 1100px
		display: inline-block;
		vertical-align: middle;

	&__list
		list-style none
		padding 0
		margin 0
		width: 100%

	&__item
		width: 100%
		margin 0 auto
		text-align: left
		position relative

	&__img
		position relative
		margin-bottom 30px

	&__btn
		background: $d-grey
		border: 0
		border-radius: 50%
		width: 65px
		height 65px
		position: absolute
		top: 28px
		right: 28px
		display flex
		flex-direction: column
		align-items: center
		justify-content: center
		cursor pointer
		z-index 99

	&__icon
		stroke: $white
		fill: none
		width: 22px
		height: 22px

	&__title
		fz-24()
		line-height 32px
		color $white
		font-weight 700
		padding-bottom 5px
		font-family $Inter

	&__text
		fz-21()
		line-height 29px
		color $white
		font-weight 500
		font-family $Inter

	&__nav-btn
		background: $d-grey
		border: 0
		border-radius: 50%
		width: 65px
		height 65px
		position: absolute
		top: calc(50% - (65px / 2))
		display flex
		flex-direction: column
		align-items: center
		justify-content: center
		cursor pointer
		z-index 99

		&:disabled
			opacity 0.5

		&--left
			left: 8%

			& .g-template__nav-icon
				transform: rotate(-180deg)

		&--right
			right: 8%

	&__nav-icon
		fill: $white
		stroke: none
		width: 14px
		height 14px
