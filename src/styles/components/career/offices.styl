.offices
	width: 100%
	padding-bottom 35px
	overflow: hidden

	&__slider
		width 100%
		height 100%
		max-width: 100%
		margin 0
		padding 0

		&.swiper
			overflow: unset

	&__text-content
		width 100%
		max-width: 510px
		padding-bottom 36px

	&__title
		fz-33()
		line-height 40px
		font-family $Inter
		font-weight 900
		color: $d-grey
		width 100%
		padding-bottom 20px

	&__text
		fz-15()
		line-height 24px
		font-family $Inter
		font-weight 500
		color $m-grey

		&:not(:last-child)
			padding-bottom 15px

	&__slider-wrap
		max-width: 1098px

	&__slide.swiper-slide
		height: auto
		max-height: 450px

	&__slide img
		height: 100%
		object-fit: cover

	&__nav-btn
		position absolute
		width 65px
		height 65px
		border-radius: 50%
		border 0
		background: $d-grey
		opacity 0.8
		top: calc(50% - (65px / 2))
		left: 15px
		z-index 1
		display flex
		align-items: center
		justify-content: center
		cursor pointer

	&__nav-btn.swiper-button-disabled
		opacity: 0.4
		transition: opacity 1s ease;

	&__nav-btn--prev
		transform: rotate(180deg)

	&__nav-btn--next
		left: unset
		right: 15px

	&__nav-icon
		fill: $white
		width 14px
		height 14px
