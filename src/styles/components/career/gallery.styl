.gallery
	width: 100%

	&__container
		max-width: 100%
		margin 0
		padding 0

	&__wrap
		width: 100%
		display: flex
		flex-direction: row
		flex-wrap: wrap

		@media $md
			min-height: 340px

		@media $sm
			min-height: unset

	&__box
		width: 50%
		position relative
		padding: 50px 60px 67px 64px

		@media $md
			padding: 50px 40px

		@media $sm
			width 100%
			min-height: 260px
			padding: 50px 20px

	&__img
		position: absolute
		top: 0
		left 0
		width: 100%
		height: 100%

		& img,
		& picture
			height 100%
			object-fit: cover

			@media $md
				object-position: left

	&__content
		position relative
		display flex
		flex-direction: column
		justify-content: space-between
		height: 100%
		max-width: 312px

		@media $md
			justify-content: flex-start

		&--margin
			margin: 0 auto
			margin-right 178px

			@media $lg
				margin: 0

	&__title
		fz-33()
		line-height 39.94px
		font-weight 900
		font-family $Inter
		padding-bottom 137px
		color: $white

		@media $md
			font-size 28px
			padding-bottom 40px

	&__btn
		border 0
		background: 0
		border-radius: 0
		text-align: center
		cursor pointer
		padding: 14px 60px
		border: 2px solid $white
		max-width: 221px

	&__btn-text
		fz-15()
		line-height 18px
		color: $white
		font-family $Inter
		font-weight 700
		position relative
