.select
		display block
		max-width 215px
		width 100%
		position relative
.new-select
	width 210px
	position relative
	background-color #E3EBF1
	border-radius 4px
	font-weight 500
	font-size 15px
	line-height 24px
	color #323639
	padding 11px 17px
	cursor pointer
	user-select none
	@media $md
		max-width 100%
	&__list
		@media $md
				width 100%
	&__list
			position absolute
			top 48px
			left 0
			background-color #E3EBF1
			border-radius 4px
			cursor pointer
			width 100%
			z-index 2
			user-select none
	&__list.on
			display block
	&__item span
			display block
			padding 10px 15px
	&__item span:hover
			text-decoration underline
	&:after
			content ''
			display block
			width 13.99px
			height 8.99px
			position absolute
			right 14px
			top 18px
			background url('../img/arrow-down.svg') no-repeat center / contain
			opacity 0.6

			-webkit-transition all .27s ease-in-out
			-o-transition all .27s ease-in-out
			transition all .27s ease-in-out

			-webkit-transform rotate(0deg)
			-ms-transform rotate(0deg)
			-o-transform rotate(0deg)
			transform rotate(0deg)
	&.on:after
			-webkit-transform rotate(180deg)
			-ms-transform rotate(180deg)
			-o-transform rotate(180deg)
			transform rotate(180deg)
