.box__top.box__top--social-projects
    .top
        padding-bottom 102px
        @media $xs
            padding-bottom 49px
    .header
        padding 60px 0 77px
        @media $xs
            padding 30px 20px
    .header__container
        @media $md
            padding 0 40px
        @media $xs
            padding 0
    .header__wrap
        @media $md
            padding-bottom 0
    .top__title
        max-width 50%
        padding-bottom 45px
    .top__text
        max-width 400px
.project
    list-style none
    padding 79px 0 60px
    margin 0
    @media $md
        padding 52px 0 60px
    @media $xs
        padding 40px 0 50px
    &__item
        margin-bottom 100px
        @media $md
            margin-bottom 70px
    &__item:last-child
        margin-bottom 0
    &__block
        display flex
        justify-content space-between
        @media $md
            flex-direction column-reverse
    &__content
    &__img
        width 50%
        @media $md
            width 100%
            max-width 100%
    &__content
        max-width: 445px;
        @media $md
            max-width 100%
    &__img
        max-width: 547px;
        margin-left: 3px;
        @media $md
            max-width 100%
            margin-left 0
            margin-bottom 20px
    &__img img
        object-fit cover
        height 100%
    &__title
        font-weight 900
        font-size 33px
        line-height 40px
        color $d-grey
        margin-bottom 45px
    &__subtitle
        font-weight 500
        font-size 21px
        line-height 29px
        color $d-grey
        margin-bottom 20px
    &__text
        font-weight 500
        font-size 15px
        line-height 24px
        color $m-grey
        margin-bottom 50px
        @media $md
            margin-bottom 30px
    &__link
        max-width 216px
    &__img-several
        display grid
        grid-template-columns repeat(2,1fr)
        grid-template-rows repeat(2,minmax(180px,auto))
        column-gap 5px
        row-gap 6px
        @media $md
            grid-template-columns repeat(3,1fr)
            grid-template-rows repeat(1,minmax(180px,auto))
        @media $xs
            grid-template-columns repeat(2,1fr)
            grid-template-rows repeat(1,minmax(180px,auto))
    &__img-link
        position relative
        display flex
        align-items center
        justify-content center
        text-decoration none
        color $white
        text-align center
    &__img-link::before
        content ''
        position absolute
        width 100%
        height 100%
        background-color $d-grey
        opacity .6
    &__img-text
        position absolute
        font-weight 500
        font-size 15px
        line-height 24px
    &__img-number
        font-weight 900
        font-size 33px
        line-height 40px
    &__img-desc
        @media $md
            display none
    &__img img:nth-child(n + 3)
        @media $md
            display none
    &__img img:nth-child(n + 2)
        @media $xs
            display none
    &__img .project__img-link img:nth-child(n + 2)
        @media $xs
            display block
    &__img-mob
        display none
        @media $md
            display block
    &__img-mob.project__img-several
        display none
        @media $md
            display grid
            grid-template-columns repeat(3,222px)
            grid-template-rows repeat(1,minmax(180px,auto))
            column-gap 11px
            & img:nth-child(n + 3)
                display none
        @media $sm
            & img:nth-child(n + 2)
                display none
        @media $xs
            grid-template-columns repeat(2,162px)
            grid-template-rows repeat(1,minmax(132px,auto))
    &__link-text
      position relative
      z-index 1
