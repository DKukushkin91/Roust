.box__top.box__top--social-projects
    .top
        padding-bottom 102px
    .header
        padding 60px 0 77px
    .top__title
        max-width 50%
        padding-bottom 45px
    .top__text
        max-width 400px
.project
    list-style none
    padding 79px 0 60px
    margin 0
    &__item
        margin-bottom 100px
    &__item:last-child
        margin-bottom 0 
    &__block
        display flex
        justify-content space-between
    &__content
    &__img
        width 50%
    &__content
        max-width: 445px;
    &__img
        max-width: 547px;
        margin-left: 3px;
    &__img img
        object-fit cover
    &__title
        font-weight 900
        font-size 33px
        line-height 40px
        color $d-grey
        margin-bottom 45px
    &__subtitle
        font-weight 500
        font-size 21px
        line-height 29px
        color $d-grey
        margin-bottom 20px
    &__text
        font-weight 500
        font-size 15px
        line-height 24px
        color $m-grey
        margin-bottom 50px
    &__link
        max-width 216px
    &__img-several
        display grid
        grid-template-columns: repeat(2,271px);
        grid-template-rows: repeat(2,minmax(180px,auto));
        column-gap: 5px;
        row-gap: 6px;
    &__img-link
        position relative
        display flex
        align-items center
        justify-content center
        text-decoration none
        color $white
        text-align center
    &__img-link::before
        content ''
        position absolute
        width 100%
        height 100%
        background-color $d-grey
        opacity .6
    &__img-text
        position absolute
        font-weight 500
        font-size 15px
        line-height 24px
    &__img-number
        font-weight 900
        font-size 33px
        line-height 40px
    