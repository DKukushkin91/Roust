block pageVar
	-
		page = '';

block path
	-
		var baseDir = '';

block title
	-
		var title = '';

block text
	-
		var topText = '';

include ./_mixins

doctype html
html(lang='ru')
	head
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(http-equiv='Content-Type' content='text/html;charset=UTF-8')
		meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no')

		link(href=`${baseDir}/css/main.css` type="text/css" rel="stylesheet")
		link(href=`${baseDir}/css/vendor.css` type="text/css" rel="stylesheet")

	body(lang='ru-RU')
		if (page != 'index')
			.box
				.box__content
					.box__top(class=`box__top--${page}`)
						if (page == 'brands-item')
							img.box__img(src="/f/img/rs-bg.jpg" alt="")
						include ./_header

						if (page != 'main-page')
							include ./_top

					main.main
						block page

				include ./_footer

		if (page == 'index')
			.box.box__index
				.box__content-index
					main.main
						block page

	include ./_templates

	script(src=`${baseDir}/scripts/vendor.js` type="text/javascript")
	script(src=`${baseDir}/scripts/main.js` type="text/javascript")
